<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.webdevel.centralproveedores.MapActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/love" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Central Proveedores es el punto de encuentro entre empresas que ofrecen sus productos y usuarios que tengan la necesidad de adquirir un producto con la posibilidad de enviar cotizaciones y órdenes de compra."
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/mapa1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="#f86610"
        android:text="Proveedores del Rubro de la Seguridad"
        android:textColor="#ffffff"
        android:width="200dp" />
    
    <Button
        android:id="@+id/mapa2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="#f86610"
        android:text="Proveedores del Rubro de la Construcción"
        android:textColor="#ffffff"
        android:width="200dp" />
    
    <Button
        android:id="@+id/mapa3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="#f86610"
        android:text="Proveedores del Rubro Industrial"
        android:textColor="#ffffff"
        android:width="200dp" />
    
    <Button
        android:id="@+id/mapa4Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="#f86610"
        android:text="Proveedores de Insumos"
        android:textColor="#ffffff"
        android:width="200dp" />

</LinearLayout>